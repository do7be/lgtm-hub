doctype html
html
  head
    meta(charset='utf-8')
    title= title
    link(rel='stylesheet', href='/css/style.css')
    mixin loadJQuery( version )
      script(src="https://ajax.googleapis.com/ajax/libs/jquery/#{ version }/jquery.min.js")

      script.
        window.jQuery || document.write("<script src='js/jquery-#{ version }.min.js'><\/script>");

    <!--[if lt IE 9]>
    +loadJQuery('1.10.2')
    <![endif]-->

    //[if gte IE 9]><!
    +loadJQuery('2.0.3')
    //<![endif]
  body
    h1= title
    p Welcome to #{title}
    textarea

block scripts
  script.
      $.getJSON("http://www.lgtm.in/g", function (data) {
        $("textarea").
          append("\n\n" + data.markdown);
          console.log(data);
        $("body").
          append("<img src=" + data.imageUrl + ">");
      });
